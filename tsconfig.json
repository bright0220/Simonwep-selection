{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "moduleResolution": "Node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "declaration": true,
        "noImplicitAny": true,
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "@react/*": [
                "packages/react/src/*"
            ],
            "@vanilla/*": [
                "packages/vanilla/src/*"
            ]
        }
    }
}
